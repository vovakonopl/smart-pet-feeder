{
  "expo": {
    "name": "pet-feeder-app",
    "slug": "pet-feeder-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "petfeederapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "primaryColor": "#3772bb",
    "ios": {
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "App uses Bluetooth to connect to the device.",
        "NSBluetoothPeripheralUsageDescription": "App uses Bluetooth to connect to the device.",
        "UIBackgroundModes": [
          "bluetooth-central"
        ]
      },
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.petfeederapp",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.NEARBY_WIFI_DEVICES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      "expo-web-browser",
      "./src/plugins/nearby-wifi-never-for-location",
      [
        "@react-native-community/datetimepicker",
        {
          "android": {
            "datePicker": {
              "colorAccent": { "light": "#3772bb" },
              "textColorPrimary": { "light": "#3772bb" }
            },
            "timePicker": {
              "headerBackground": {
                "light": "#3772bb",
                "dark": "#3772bb"
              },
              "numbersSelectorColor": {
                "light": "#3772bb",
                "dark": "#3772bb"
              }
            }
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
